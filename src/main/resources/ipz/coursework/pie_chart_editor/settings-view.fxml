<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="themeLabel" layoutX="30.0" layoutY="30.0" text="Вибір теми:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="themeChooser" layoutX="130.0" layoutY="30.0" prefWidth="150.0" />
      <CheckBox fx:id="Labels" layoutX="30.0" layoutY="130.0" mnemonicParsing="false" text="Підпис сектора" />
      <CheckBox fx:id="Legend" layoutX="160.0" layoutY="130.0" mnemonicParsing="false" text="Легенда діаграми" />
      <Label fx:id="languageLabel" layoutX="30.0" layoutY="80.0" text="Вибір Мови">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <ComboBox fx:id="LanguageChooser" layoutX="130.0" layoutY="80.0" prefWidth="150.0" />
   </children>
</AnchorPane>
